.footer {
  display: flex;
  justify-content: center;
  align-items: center;
  text-align: center;
  width: 100%;
  background-color: _black;
  margin-bottom: 0;
  margin-top: auto !important;
  padding: 1.2rem 0;

  h3 {
    color: _yellow;
    font-size: 1.2rem;
    font-weight: 100;
    margin: 0 2rem;

    &:before {
      content: '\2500\2524 ';
    }

    &:after {
      content: ' \251C\2500';
    }
  }
}