.navbar_menu {
  position: fixed;
  left: 0;
  top: 0;
  display: flex;
  align-items: center;
  padding: 0;
  margin: 0;
  width: 100%;
  height: 4rem;
  background-color: _cyan;
  color: _dark_pink;
  text-align: left;
  z-index: 4;
  border-bottom: 2px solid _black;

  &:before, &:after {
    position: absolute;
    left: 0;
    z-index: -1;
    width: 100%;
    display: block;
    content: '';
    height: 7px;
  }

  &:before {
    top: 0;
    background-color: _cyan;
  }

  &:after {
    bottom: 0;
    background-color: _dark_cyan;
  }

  h1 {
    display: inline;
    margin: 0 1.2rem;
    padding: 0;
    font-size: 2rem;

    a {
      color: inherit;

      &:hover {
        color: _pink;
      }
    }
  }

  ul {
    margin: 0 1px 0 0;
    padding: 0;
    display: inline-block;

    li {
      display: inline-block;
      list-style-type: none;
      margin: 0;
      padding: 0;

      a {
        display: block;
        font-size: 1.2rem;
        text-decoration: none;
        color: _blue;
        padding: 1.3rem 1rem;
        margin: 0 0.4rem;
        text-transform: uppercase;

        &:focus {
          outline: none;
        }

        &:before, &:after {
          font-size: 0.9em;
        }

        &:before {
          content: '\2503';
          margin-right: 4px;
        }

        &:after {
          content: '\2503';
          margin-left: 4px;
        }

        &:hover {
          color: _yellow;
          background-color: _dark_red;
        }

        &.active {
          background-color: _dark_cyan;
          color: _white;
        }
      }
    }
  }
}

