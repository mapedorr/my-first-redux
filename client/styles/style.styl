@import '_normalize.styl';
@import '_variables.styl';
@import '_typography.styl';
@import '_animations.styl';

// la unidad ch es de “character width”
big-shadows = 2ch 2ch 0 0px _black;
shadows = 1ch 1ch 0 0px _black;

body {
  background: _blue;
}

.site_wrapper {
  display: flex;
  flex-direction: column !important;
  height: 100vh;
}

/*
░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░
H E A D E R
░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░
 */
.navbar_menu {
  position: fixed;
  left: 0;
  top: 0;
  display: flex;
  align-items: center;
  padding: 0;
  margin: 0;
  width: 100%;
  height: 4rem;
  background-color: _cyan;
  color: _dark_pink;
  text-align: left;
  z-index: 4;
  border-bottom: 2px solid _black;

  &:before, &:after {
    position: absolute;
    left: 0;
    z-index: -1;
    width: 100%;
    display: block;
    background-color: _dark_cyan;
    content: '';
    height: 7px;
  }

  &:before {
    top: 0;
  }

  &:after {
    bottom: 0;
  }

  h1 {
    display: inline;
    margin: 0 1.2rem;
    padding: 0;
    font-size: 2rem;

    a {
      color: inherit;

      &:hover {
        color: _pink;
      }
    }
  }

  ul {
    margin: 0 1px 0 0;
    padding: 0;
    display: inline-block;

    li {
      display: inline-block;
      list-style-type: none;
      margin: 0;
      padding: 0;

      a {
        display: block;
        font-size: 1.2rem;
        text-decoration: none;
        color: _blue;
        padding: 0.8rem 1rem;
        margin: 0 0.4rem;
        text-transform: uppercase;

        &:focus {
          outline: none;
        }

        &:before, &:after {
          font-size: 0.9em;
        }

        &:before {
          content: '\2503';
          margin-right: 4px;
        }

        &:after {
          content: '\2503';
          margin-left: 4px;
        }

        &:hover {
          color: _yellow;
          background-color: _dark_red;
        }

        &.active {
          background-color: _dark_cyan;
          color: _white;
        }
      }
    }
  }
}

/*
░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░
M A I N  C O N T E N T
░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░░
 */
.page_content {
  display: flex;
  justify-content: center;
  align-items: center;
  flex-grow: 1;
  margin: 4.5rem 2rem 1rem;
  padding: 2rem 0 4rem;
  border: 2px solid _white;
}

.posts_page {
  color: _light_blue;
}

.albums_page {
  color: _red;
}

.todos_page {
  color: _yellow;
}

.photo-grid {
  display: flex;
  flex-wrap: wrap;
}

.grid-figure {
  flex-basis: calc(33.333% - 4rem);
  flex-grow: 1;
  flex-shrink: 0;
  margin: 0 2rem 2rem 2rem;
  padding: 2rem;
  background: _grey;
  position: relative;
  box-shadow: big-shadows;

  figcaption {
    p {
      color: _cyan;
    }
  }
}

.single-photo {
  @extend .grid-figure;
  max-width: 900px;
  margin: 0 auto;
  display: flex;
  background: white;

  .grid-figure {
    box-shadow: none;
    margin: 0 2rem 0 0;
    border: 0;
    padding: 0;
    flex: 1 0 60%;
    max-width: 60%;
  }

  .comments {
    flex: 1 0 40%;
    max-width: 40%;
  }

  .grid-photo {
    width: 100%;
    margin: 0;
  }
}

.grid-photo {
  width: calc(100% + 4rem);
  margin-left: -2rem;
  margin-top: -2rem;
  max-width: none;
}

// Comments
.remove-comment {
  background: none;
  border: 0;
  line-height: 1;
  opacity: 0;

  &:hover {
    color: red;
  }
}

.comment {
  border-bottom: 1px solid lightgrey;
  padding: 0.5rem 0;

  p {
    font-size: 1.2rem;
    margin: 0;
  }

  strong {
    color: blue;
    margin-right: 5px;
  }

  &:hover {
    .remove-comment {
      opacity: 1;
    }
  }
}

.comment-form {
  input, textarea {
    width: 100%;
    border: 0;
    font-size: 1.3rem;
    padding: 1rem 0;
    border-bottom: 1px solid lightgrey;
    outline: none;
    resize: vertical;
  }
}

.grid-photo-wrap {
  position: relative;
}

.likes-heart {
  background: url('http://f.cl.ly/items/3Y373q2Q3J3Y1j203n0m/Bitmap-3.png') center no-repeat; // f.cl.ly/items/3Y373q2Q3J3Y1j203n0m/Bitmap-3.png) center no-repeat
  background-size: contain;
  font-size: 2rem;
  padding: 1rem;
  position: absolute;
  color: blue;
  left: 50%;
  top: 50%;
  pointer-events: none;
}

/*
  Buttons
*/
.control-buttons {
  display: flex;
  justify-content: space-between;
}

button, .button {
  background: _green;
  border: none;
  box-shadow: shadows;
  flex-basis: 48%;
  display: inline-block;
  line-height: 2;
  text-decoration: none;
  padding: 5px;
  text-align: center;
  font-size: 15px;
  color: blue;
  transition: all 0.2s;
  box-sizing: padding-box;

  &:hover, &:focus {
    outline: 0;
  }
}

/*
  Cowboy style speech bubble - you should probably use an SVG for this if you are doing more icons.
*/
.speech-bubble {
  size = 1.25rem;
  width: size * 1.2;
  height: size;
  background: blue;
  display: inline-block;
  border-radius: 50%;
  position: relative;

  &:after {
    display: inline-block;
    position: absolute;
    content: '';
    width: 0;
    height: 0;
    border-style: solid;
    border-width: 0 size size 0;
    border-color: transparent blue transparent transparent;
    top: 30%;
    left: 0;
  }
}

