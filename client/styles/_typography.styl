html {
  font-size: 10px;
  font-family: sans-serif;
  font-family: 'Px437_IBM_VGA8', monospace;
}

p {
  font-size: 1.7rem;
  line-height: 1.5;
}

h1 {
  text-align: center;
  font-weight: 100;
  font-size: 6rem;
  margin: 2rem 0;
  letter-spacing: -1px;
  text-shadow: 0px 4px 0 rgba(18, 86, 136, 0.11);

  a {
    color: _grey;
    text-decoration: none;

    &:focus {
      outline: 0;
    }
  }
}

// "Instagram-like" webfont
@font-face {
  // billabongregular
  font-family: 'Px437_IBM_VGA8';
  src: url('../fonts/px437_ibm_vga8-webfont.eot');
  src: url('../fonts/px437_ibm_vga8-webfont.eot?#iefix') format('embedded-opentype'), url('../fonts/px437_ibm_vga8-webfont.woff') format('woff'), url('../fonts/px437_ibm_vga8-webfont.ttf') format('truetype');
  font-weight: normal;
  font-style: normal;
}
